<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <style>
      html,
      body {
        font-family: sans-serif;
        height: 100%;
      }
      .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
      }
      .form_container {
        height: 25%;
      }
      #csv-report {
        border: solid 2px;
      }
      form {
        height: 100%;
        margin: 0 auto;
      }
      form label,
      form button {
        background-color: #7f9ccb;
        padding: 5px 10px;
        border-radius: 5px;
        border: 1px ridge black;
        font-size: 0.8rem;
        height: auto;
      }
      form label:hover,
      form button:hover {
        background-color: #2d5ba3;
        color: white;
      }

      form label:active,
      form button:active {
        background-color: #0d3f8f;
        color: white;
      }
      .method {
        padding: 25px;
      }
    </style>
    <title>JSON TO CSV CONVERTER</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="server.js"></script>
    <script src="app.js"></script>
  </head>
  <body>
    <div class="container">
      <div>
        <h1>JSON-CSV</h1>
        <p>Convert JSON files to comma-separated values</p>
      </div>
      <div class="form_container">
        <!-- file form -->
        <form id="json-file-form" action="json-file" method="post" enctype="multipart/form-data">
          <div>
            <label id="label" for="json-file">UPLOAD A JSON FILE</label>
            <input id="json-file" type='file' name="jsonfile" />
          </div>
          <div class="preview">
            <p>No files currently selected for upload</p>
          </div>
          <button class="submit" hidden="true" type="submit">
            Convert
          </button>
          <div class="method">
            <a id="to-text" href="#">Input JSON text directly</a>
          </div>
        </form>
        <!-- text area -->
        <form id="json-text-form" action="json-text" method="post">
          <div>
            <p>INPUT JSON TEXT</p>
            <input id="json-text" type="text" name="jsontext" accept=".json" />
          </div>
          <button id='default' class="submit" type="submit" value="Convert">
            Convert
          </button>
          <div class="method">
            <a id="to-file" href="#">Upload JSON file</a>
          </div>
        </form>
      </div>
      <div id='send-method'>
          <p>Select a post method:</p>
          <div>
              <input type="radio" id="default" name="post-method" value="default" checked>
              <label for="default">Default</label>
              <input type="radio" id="ajax" name="post-method" value="ajax">
              <label for="ajax">AJAX</label>
          </div>
        </div>
      <div>
        <h1>CSV Report</h1>
        <!-- CSV report -->
        <div id="csv-report">
            <pre>
                <%= report %>
            <pre>
        </div>
      </div>
    </div>
    <script>
      $(() => App.initialize());
    </script>
  </body>
</html>
